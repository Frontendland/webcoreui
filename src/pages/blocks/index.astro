---
import Layout from '@static/Layout.astro'
import Link from '@static/Link.astro'

import Card from '@components/Card/Card.astro'

import Hero from '@blocks/Hero/Hero.astro'
import IconList from '@blocks/IconList/IconList.astro'
import SignUp from '@blocks/SignUp/SignUp.astro'
import Tiles from '@blocks/Tiles/Tiles.astro'
import User from '@blocks/User/User.astro'
---

<Layout>
    <h1>Blocks</h1>

    <div class="flex wrap justify-center">
        <div class="block-column flex column">
            <div class="relative">
                <SignUp />
                <Link href="/blocks/sign-up" />
            </div>
        </div>
        <div class="block-column flex column">
            <Card title="User with Rating">
                <User
                    avatar="../img/avatar0.png"
                    name="Marcus"
                    role="Top rated seller"
                    roleTooltip="In Art & Collectibles"
                    rating={4.8}
                    showText={true}
                />
                <Link href="/blocks/user" />
            </Card>

            <Card title="Hero section">
                <Hero
                    heading="Hero section"
                    subHeading="With Subtitle, badges, and CTA"
                    buttons={[
                        { text: 'Get Started ->' },
                        { text: 'Contact', theme: 'secondary' }
                    ]}
                    badge={{
                        rounded: true,
                        theme: 'alert',
                        text: 'New releases'
                    }}
                />
                <Link href="/blocks/hero" />
            </Card>
        </div>
        <div class="block-column flex column">
            <Card title="Tiles with Icons">
                <Tiles items={[
                    { icon: 'home', label: 'Home', href: '' },
                    { icon: 'github', label: 'Github', href: '' }
                ]} columns={1} />
                <Link href="/blocks/tiles" />
            </Card>
            <Card title="List with Icons">
                <IconList items={[
                    { icon: 'circle-check', text: '<b>Advantages</b>', color: 'var(--w-color-success)' },
                    { icon: 'circle-close', text: '<b>Disadvantages</b>', color: 'var(--w-color-alert)' }
                ]} />
                <Link href="/blocks/icon-list" />
            </Card>
        </div>
    </div>
</Layout>

<style is:global lang="scss">
    @import 'webcoreui/config';

    h2:not(.heading) {
        @include typography(left);
    }

    .block-column {
        @include size(w370px);
    }
</style>
