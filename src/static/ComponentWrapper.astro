---
import Card from '@components/Card/Card.astro'

import { classNames } from '@utils/classNames'

const {
    title,
    secondary,
    compact,
    type,
    bodyClassName
} = Astro.props
---

<Card
    title={title || type}
    titleTag="strong"
    secondary={secondary}
    compact={compact}
    bodyClassName={bodyClassName}
    className={classNames([
        type && type.slice(0, 1).toLocaleLowerCase(),
        'default'
    ])}
>
    <slot />
</Card>
