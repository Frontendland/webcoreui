---
interface Props {
    element?: string
    title?: string
    compact?: boolean
    className?: string
    secondary?: boolean
    [key: string]: any
}

const {
    element = 'section',
    title,
    titleTag = 'span',
    compact = true,
    className,
    secondary,
    ...rest
} = Astro.props

const classes = [
    className,
    secondary && 'secondary',
    'card'
].filter(Boolean).join(' ')

const props = {
    class: classes
}

const Component = element
const Title = titleTag
---

<Component {...props} {...rest}>
    {title && (
        <Title class="card-title">{title}</Title>
    )}
    <div class="card-body" class:list={[compact && 'compact']}>
        {compact ? (
            <div class="card-wrapper"><slot /></div>
        ) : (
            <slot />
        )}
    </div>
</Component>

<style lang="scss">
    @import './card.scss';
</style>
