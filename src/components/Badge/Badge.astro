---
import type { BadgeProps } from './badge'

import styles from './badge.module.scss'

interface Props extends BadgeProps {}

const {
    theme,
    hover,
    small,
    rounded,
    className,
    ...rest
} = Astro.props

const classes = [
    styles.badge,
    theme && styles[theme],
    hover && styles.hover,
    small && styles.small,
    rounded && styles.round,
    className
]
---

<span class:list={classes} {...rest}>
    <slot />
</span>
