{
    "name": "webcore",
    "type": "module",
    "version": "1.1.0",
    "scripts": {
        "prepare": "husky",
        "pre-commit": "lint-staged",
        "dev": "astro dev",
        "start": "astro preview",
        "build": "astro check && astro build",
        "build:package": "node scripts/build.js",
        "compile": "node scripts/sass.js",
        "test": "vitest run && npm run test:sass",
        "test:dev": "vitest",
        "test:run": "vitest run",
        "test:sass": "vitest run src/tests/unit/scss.test.js --config astro.config.mjs",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "create-component": "node scripts/createComponent.js",
        "lint": "eslint src/**/*"
    },
    "devDependencies": {
        "@astrojs/check": "0.9.4",
        "@astrojs/node": "9.4.1",
        "@astrojs/react": "4.3.0",
        "@astrojs/svelte": "7.1.0",
        "@eslint/js": "9.23.0",
        "@playwright/test": "1.55.1",
        "@types/node": "24.6.2",
        "@typescript-eslint/parser": "8.39.1",
        "astro": "5.13.0",
        "astro-eslint-parser": "1.2.2",
        "eslint": "9.23.0",
        "eslint-plugin-astro": "1.3.1",
        "eslint-plugin-react": "7.37.4",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "eslint-plugin-svelte": "3.3.3",
        "husky": "9.1.7",
        "jsdom": "26.0.0",
        "lint-staged": "15.5.0",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "sass": "1.90.0",
        "sass-true": "8.1.0",
        "svelte": "5.38.1",
        "svelte-eslint-parser": "1.1.0",
        "typescript": "5.9.2",
        "typescript-eslint": "8.39.1",
        "vite-tsconfig-paths": "5.1.4",
        "vitest": "3.0.4",
        "webcoreui": "1.1.0"
    },
    "exports": {
        ".": "./index.js",
        "./astro": "./astro.js",
        "./svelte": "./svelte.js",
        "./react": "./react.js",
        "./icons": "./icons.js",
        "./integration": "./integration.js",
        "./styles": "./scss/index.scss",
        "./config": "./scss/config.scss"
    },
    "files": [
        "components",
        "icons",
        "scss",
        "utils",
        "astro.d.ts",
        "astro.js",
        "icons.d.ts",
        "icons.js",
        "svelte.d.ts",
        "svelte.js",
        "react.d.ts",
        "react.js",
        "index.js",
        "index.d.ts",
        "integration.js",
        "integration.d.ts",
        "README.md",
        "LICENSE"
    ],
    "license": "MIT",
    "description": "UI component and template library for Astro, Svelte, and React apps styled with Sass.",
    "keywords": [
        "webcore",
        "component",
        "components",
        "ui components",
        "component library",
        "astro components",
        "svelte components",
        "react components",
        "frontend",
        "library",
        "sass"
    ],
    "homepage": "https://webcoreui.dev",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Frontendland/webcoreui.git"
    },
    "bugs": {
        "url": "https://github.com/Frontendland/webcoreui/issues"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx,svelte,astro}": "eslint src/**/*"
    }
}
